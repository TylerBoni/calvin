{
  "name": "ai-calendar-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "An intelligent calendar application that understands natural language event descriptions",
  "scripts": {
    "dev": "vite",
    "dev:android": "npx cap open android",
    "dev:ios": "npx cap open ios",
    "build": "vite build",
    "build:cap": "vite build && npx cap sync",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx src/lib/db/seed.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push:pg",
    "test": "vitest",
    "test:integration": "playwright test"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/vite": "^4.0.0-alpha.15",
    "@tsconfig/svelte": "^5.0.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.17",
    "deno": "^2.4.2",
    "drizzle-kit": "^0.20.14",
    "playwright": "^1.41.2",
    "postgres": "^3.4.7",
    "svelte": "^5.35.5",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^4.0.0-alpha.15",
    "tsx": "^4.7.1",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@auth/core": "^0.28.0",
    "@auth/sveltekit": "^0.9.0",
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/ios": "^7.4.2",
    "@lucia-auth/adapter-drizzle": "^1.0.7",
    "@supabase/supabase-js": "^2.52.0",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.30.8",
    "lucia": "^3.1.1",
    "openai": "^4.28.4",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  }
}
